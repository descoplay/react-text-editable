{
    "name": "react-editable-text",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "element-react": "^1.4.34",
        "element-theme-default": "^1.4.13",
        "markdown-to-jsx": "^6.10.3",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-hot-loader": "^4.12.17",
        "react-scripts": "3.2.0"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app",
        "rules": {
            "brace-style": [
                1,
                "stroustrup",
                {
                    "allowSingleLine": true
                }
            ],
            "linebreak-style": 0,
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                1,
                "never"
            ],
            "no-multiple-empty-lines": [
                1,
                {
                    "max": 1
                }
            ],
            "max-len": [
                1,
                100,
                100,
                {}
            ],
            "array-bracket-spacing": [
                1,
                "always",
                {}
            ],
            "comma-spacing": [
                1,
                {
                    "after": true
                }
            ],
            "comma-dangle": [
                1,
                "always"
            ],
            "keyword-spacing": [
                1,
                {
                    "before": true
                }
            ],
            "space-before-function-paren": 1,
            "eqeqeq": [
                1,
                "smart"
            ],
            "no-trailing-spaces": 1,
            "no-multi-spaces": 1,
            "eol-last": [
                1,
                "never"
            ],
            "indent": [
                1,
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "no-return-assign": [
                0
            ],
            "no-console": "off"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
